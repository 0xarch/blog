<!DOCTYPE html>
<html>
    <head>
        <%! widget:xhead !%>
        <title>
            <%! widget:title !%>
        </title>
    </head>
    <body>
        <header class="shrinked">
            <%! widget:nav !%>
            <div class="centerArea">
                <h1>分类</h1>
                <h3>共<%= ginfo.cateCount -%>个分类</h3>
            </div>
            
        </header>
        <div class="wrapper">
            <% if (info.features.hasThirdBar) { -%>
                <div class="wrapperItem wrapperLeft">
                    <%! extensions !%>
                </div>
            <% } -%>
            <div class="wrapperItem wrapperMain">
                <div class="widget nohover postList">
                    <h2>文章总览</h2>
                    <% POSTS.forEach(item=>{ -%>
                        <div class="inPostList">
                            <span class="dateItem"><%= item.date -%></span>
                            <br/>
                            <a href="<%= item.src %>" class="postCardTitle small"><%= item.title -%></a>
                        </div>
                    <% }) -%>
                </div>
            </div>
            <div class="wrapperItem wrapperRight">
                <%! widget:about !%>
                <%! widget:announcement !%>
                <%! widget:archivelist !%>
                <% if (!info.features.hasThirdBar) { -%>
                        <%! extensions !%>
                <% } -%>
            </div>
        </div>
        <%! widget:footer !%>
    </body>
</html>