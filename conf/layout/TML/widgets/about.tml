!div'[widget about]{
    !div'[centered]{
        !img'[avatar].src(@info.avatar@);
        !h3{ !a.href(@info.url@){@info.name@} }
        !h5{@info.note@}
    }
    !div'[centered info-data]{
        !div'[counting-post fR flJC]{
            !div'[postCount mr]{
                !p{文章}
                !p'[m0 fsl fb]{@ginfo.postCount@}
            }
            !div'[cateCount ml]{
                !p{分类}
                !p'[m0 fsl fb]{@ginfo.cateCount@}
            }
        }
    }
}